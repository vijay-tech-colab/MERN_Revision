<%- include('./partials/head') %> <!-- Include Head Partial -->
<body class="bg-gradient-to-r from-gray-100 to-gray-300 min-h-screen flex flex-col">

<%- include('./partials/header') %> <!-- Include Header Partial -->

    <!-- Main Content -->
    <main class="flex flex-col items-center justify-center flex-grow w-full px-4 py-8">
        <div class="bg-white p-8 rounded-xl shadow-lg w-full max-w-lg">
            <h1 class="text-3xl font-bold text-center text-red-500 mb-6">Add Your Home</h1>
            <p class="text-gray-600 text-center mb-8">
                Fill out the form below to list your property on <span class="font-semibold text-blue-500">Hamara Airbnb</span>.
            </p>
            <form action="/add-home" method="post" class="space-y-6">
                <!-- Home Name Input -->
                <div>
                    <label for="name" class="block text-gray-700 font-medium mb-2">Home Name</label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        placeholder="Name of your Home" 
                        class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
                        required
                    >
                </div>

                <!-- Price Input -->
                <div>
                    <label for="price" class="block text-gray-700 font-medium mb-2">Price</label>
                    <input 
                        type="number" 
                        id="price" 
                        name="price" 
                        placeholder="Price of your Home" 
                        class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
                        required
                    >
                </div>

                <!-- Location Input -->
                <div>
                    <label for="location" class="block text-gray-700 font-medium mb-2">Location</label>
                    <input 
                        type="text" 
                        id="location" 
                        name="location" 
                        placeholder="Location of your Home" 
                        class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
                        required
                    >
                </div>

                <!-- Rating Input -->
                <div>
                    <label for="rating" class="block text-gray-700 font-medium mb-2">Rating</label>
                    <input 
                        type="number" 
                        id="rating" 
                        name="rating" 
                        placeholder="Rating of your Home" 
                        class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
                        required
                    >
                </div>

                <!-- Photo URL Input -->
                <div>
                    <label for="photoUrl" class="block text-gray-700 font-medium mb-2">Photo URL</label>
                    <input 
                        type="text"
                        id="photoUrl" 
                        name="photoUrl" 
                        placeholder="Photo URL of your Home" 
                        class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
                        required
                    >
                </div>

                <!-- Add Home Button -->
                <button 
                    type="submit" 
                    class="w-full bg-gradient-to-r from-blue-500 to-indigo-500 text-white py-3 rounded-lg font-semibold text-lg hover:opacity-90 transition duration-300">
                    Add Home
                </button>
            </form>
        </div>
    </main>

    <%- include('./partials/footer') %> <!-- Include Footer Partial -->
    <%- include('./partials/bottom') %> <!-- Include Bottom Partial -->
</body>
