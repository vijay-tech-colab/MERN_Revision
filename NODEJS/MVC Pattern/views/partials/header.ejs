<header class="bg-white shadow-md sticky top-0 z-10">
    <div class="container mx-auto px-4 flex items-center justify-between py-4">
        <!-- Logo -->
        <div class="flex items-center space-x-2">
            <img src="https://via.placeholder.com/40" alt="Logo" class="h-10 w-10 rounded-full">
            <h1 class="text-2xl font-extrabold text-red-500">Hamara Airbnb</h1>
        </div>

        <!-- Navigation Links -->
        <nav class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-700 hover:text-red-500 transition duration-300">Home</a>
            <a href="/add-home" class="text-gray-700 hover:text-red-500 transition duration-300">Add Home</a>
            <a href="/about" class="text-gray-700 hover:text-red-500 transition duration-300">About Us</a>
            <a href="/contact" class="text-gray-700 hover:text-red-500 transition duration-300">Contact</a>
        </nav>

        <!-- Search Bar -->
        <div class="hidden lg:flex flex-1 max-w-md mx-8">
            <input 
                type="text" 
                placeholder="Search for homes..." 
                class="w-full border border-gray-300 rounded-full py-2 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-red-500"
            >
        </div>

        <!-- Call to Action -->
        <a href="/host" class="bg-gradient-to-r from-red-500 to-pink-500 text-white py-2 px-4 rounded-full font-medium hover:scale-105 transition-transform duration-300">
            Become a Host
        </a>

        <!-- Mobile Menu Button -->
        <button class="block md:hidden text-gray-700 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>
    </div>
</header>
